<h1>All Users</h1>

<table border="1" cellspacing="0" cellpadding="10">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Address</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td><%= user.address %></td>
        <td>
          <%= link_to 'Show', user_path(user), style: 'margin-right: 10px;' %>
          <%= link_to 'Edit', edit_user_path(user), style: 'margin-right: 10px;' %>
          <%= link_to 'Delete', user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New User', new_user_path, style: 'display: inline-block; margin-top: 20px;' %>
